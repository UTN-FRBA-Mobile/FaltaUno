<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_row_border"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/hueso">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/canchaFoto"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/separador_row"
                android:src="@mipmap/ic_launcher_toolbar"
                />
                <View
                    android:layout_width="5dp"
                    android:layout_height="@dimen/separador_row"
                    android:background="@android:color/holo_orange_light"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/canchaRowNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancha Los Padrinos"
                        android:textSize="@dimen/titulo_row"/>
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rowCount="2"
                        android:columnCount="2"
                        android:layout_marginTop="@dimen/fila_row">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancha_row_ubicacion"
                            android:textSize="@dimen/fila_row"
                            android:textStyle="italic|bold"
                            />
                        <TextView
                            android:id="@+id/canchaRowUbicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Riglos 930"
                            android:textSize="@dimen/fila_row"
                            android:layout_marginLeft="@dimen/text_margin"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancha_row_barrio"
                            android:textSize="@dimen/fila_row"
                            android:textStyle="italic|bold"
                            />
                        <TextView
                            android:id="@+id/canchaRowBarrio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Caballito"
                            android:textSize="@dimen/fila_row"
                            android:layout_marginLeft="@dimen/text_margin"
                            />
                    </GridLayout>
                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
