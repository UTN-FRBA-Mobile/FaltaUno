<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/verde_oscuro</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FaltaUno" parent="AppTheme" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/verde_azulado_intenso</item>
    </style>

    <style name="FaltaUno.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="FaltaUno.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FaltaUno.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //Agrego style para poder aumentar la fuente del numberPicker
    <style name="NumberPickerText">
        <item name="android:textSize">25dp</item>
    </style>

    //Agrego style para agrandar fuente de spinner
    <style name="spinnerCanchas">
        <item name="android:textSize">20dp</item>
    </style>


</resources>
